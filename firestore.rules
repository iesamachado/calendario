rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    
    // User functions
    function isAdmin() {
      return request.auth != null && get(/databases/$(database)/documents/users/$(request.auth.uid)).data.isAdmin == true;
    }
    
    function isAuthed() {
      return request.auth != null;
    }

    // Availability Collection
    // Only authenticated users can read to see the calendar
    // Only admins can update the remaining slots
    match /availability/{day} {
      allow read: if isAuthed();
      allow create, update: if isAdmin(); 
                            // Removed field validation to avoid complexity with partial merges (isHoliday vs remainingSlots)
                            // Admin code is trusted.
    }

    // Users Collection
    // Admins can read/write everything in users collection to manage roles
    // Users can read/write their own document (for auto-creation on login)
    match /users/{userId} {
      allow read, write: if isAuthed() && request.auth.uid == userId;
      allow read, write: if isAdmin();
    }
  }
}
